<div class="modal" data-modal="memes">
    <!-- Background -->
    <div class="modal__background"></div>

    <!-- Content -->
    <div class="modal__content">
        <!-- Buttons -->
        <div class="buttons">
            <button class="close" type="button" title="Close"><i class="fa-solid fa-xmark"></i></button>
        </div>

        <!-- Inner -->
        <div class="inner">
            <!-- Header -->
            <div class="header">
                <!-- Title -->
                <h2 class="h3 title">Create Poncho Memes</h2>

                <!-- Description -->
                <p>Share your creations on <a href="https://x.com/ponchoBASE" target="_blank">Twitter / X</a> with #Ponchify and <a href="https://t.me/ponchoBASE" target="_blank">Telegram</a>.</p>
            </div>

            <!-- Body -->
            <div class="body">
                <!-- Meme generator -->
                <div class="row meme_generator">
                    <div class="row">
                        <!-- Left -->
                        <div class="col-50 left">
                            <!-- Top -->
                            <div class="row top">
                                <!-- Save -->
                                <button class="button button--red-inverse icon reset" type="button" title="Reset"><i class="fa-solid fa-arrows-rotate"></i></button>

                                <!-- Edit -->
                                <button class="button button--orange-inverse icon edit" type="button" title="Edit"><i class="fa-solid fa-pen"></i></button>

                                <!-- Save -->
                                <button class="button button--green-inverse icon save" type="button" title="Save"><i class="fa-solid fa-floppy-disk"></i></button>

                                <!-- Download -->
                                <button class="button button--blue-inverse icon download" type="button" title="Download"><i class="fa-solid fa-download"></i></button>

                                <!-- Expand -->
                                <button class="button button--blue-inverse icon expand" type="button" title="Expand"><i class="fa-solid fa-expand"></i></button>

                                <!-- Compress -->
                                <button class="button button--blue-inverse icon compress" type="button" title="Compress"><i class="fa-solid fa-compress"></i></button>
                            </div>

                            <!-- Meme -->
                            <div class="meme">
                                <!-- Canvas-->
                                <canvas id="meme_canvas"></canvas>
                            </div>
                        </div>

                        <!-- Right -->
                        <div class="col-50 right">
                            <!-- Buttons -->
                            <div class="row top">
                                <!-- Add text -->
                                <button class="button button--blue" type="button" title="Add Text"><i class="fa-solid fa-paragraph margin--icon"></i> Text</button>

                                <!-- Add image -->
                                <button class="button button--blue" type="button" title="Add Image"><i class="fa-solid fa-image margin--icon"></i> Image</button>

                                <!-- Add icon -->
                                <button class="button button--blue" type="button" title="Add Icon"><i class="fa-regular fa-face-smile"></i></button>

                                <!-- Add shape -->
                                <button class="button button--blue" type="button" title="Add Shape"><i class="fa-solid fa-shapes"></i></button>
                            </div>

                            <!-- Accordions -->
                            <div class="row accordions margin--none-auto">
                                <!-- Accordions container -->
                                <div class="accordions__container">
                                    <!-- Accordion -->
                                    <div class="accordion margin--none-top">
                                        <!-- Header -->
                                        <h3 class="accordion__header">
                                            <!-- Trigger -->
                                            <button class="trigger" type="button" title="Select Template" aria-expanded="false">
                                                <span class="title">Select Template</span>
                                                <i class="fas fa-chevron-down" aria-hidden="true"></i>
                                            </button>
                                        </h3>

                                        <!-- Panel -->
                                        <div class="accordion__panel" role="region" hidden="">
                                            <!-- Templates -->
                                            <div class="templates">
                                                <!-- Gallery -->
                                                <div class="gallery">
                                                    <div class="inner">
                                                        <!-- With sign -->
                                                        <button class="template-button active" data-template="with_sign">
                                                            <img src="/dist/img/memes/templates/with_sign_small.png?v=3" alt="With Sign" loading="lazy">
                                                        </button>

                                                        <!-- Change my mind -->
                                                        <button class="template-button" data-template="change_my_mind">
                                                            <img src="/dist/img/memes/templates/change_my_mind_small.png?v=3" alt="Change My Mind" loading="lazy">
                                                        </button>

                                                        <!-- Smart -->
                                                        <button class="template-button" data-template="smart">
                                                            <img src="/dist/img/memes/templates/smart_small.png?v=3" alt="Smart" loading="lazy">
                                                        </button>

                                                        <!-- Drake hotline bling -->
                                                        <button class="template-button" data-template="drake_hotline_bling">
                                                            <img src="/dist/img/memes/templates/drake_hotline_bling_small.png?v=3" alt="Drake Hotline Bling" loading="lazy">
                                                        </button>

                                                        <!-- Truck -->
                                                        <button class="template-button" data-template="truck">
                                                            <img src="/dist/img/memes/templates/truck_small.png?v=3" alt="Truck" loading="lazy">
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Accordion -->
                                    <div class="accordion margin--none-top">
                                        <!-- Header -->
                                        <h3 class="accordion__header">
                                            <!-- Trigger -->
                                            <button class="trigger" type="button" title="Select Template" aria-expanded="false">
                                                <span class="title">Select Assets</span>
                                                <i class="fas fa-chevron-down" aria-hidden="true"></i>
                                            </button>
                                        </h3>

                                        <!-- Panel -->
                                        <div class="accordion__panel" role="region" hidden="">
                                            <!-- Assets -->
                                            <div class="assets">
                                                <!-- Gallery -->
                                                <div class="gallery">
                                                    <div class="inner">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Accordion -->
                                    <div class="accordion margin--none-top">
                                        <!-- Header -->
                                        <h3 class="accordion__header">
                                            <!-- Trigger -->
                                            <button class="trigger" type="button" title="Select Template" aria-expanded="false">
                                                <span class="title">Manage Layers</span>
                                                <i class="fas fa-chevron-down" aria-hidden="true"></i>
                                            </button>
                                        </h3>

                                        <!-- Panel -->
                                        <div class="accordion__panel" role="region" hidden="">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>